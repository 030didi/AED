<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 主內容區域 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:paddingBottom="90dp"
        android:background="#234C6A">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- 返回按鈕 -->
            <Button
                android:id="@+id/btn_back_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_back"
                android:textColor="#000000"
                android:backgroundTint="#E3E3E3"
                android:elevation="6dp"
                app:cornerRadius="20dp" />

            <!-- 標題 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AED 相關法規"
                android:textSize="26sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="關於緊急醫療救護法及公共場所必要緊急救護設備管理辦法等詳細說明。"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="20dp"/>

            <!-- 法規列表 -->
            <LinearLayout
                android:id="@+id/regulation_container"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- 法規項目 1 -->
                <TextView
                    android:id="@+id/regulation_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="第 1 條 - 立法目的"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:background="#3D5A73"
                    android:padding="15dp"
                    android:layout_marginBottom="10dp"
                    android:drawableEnd="@android:drawable/ic_menu_info_details"
                    android:drawablePadding="10dp"
                    android:clickable="true"
                    android:focusable="true"/>

                <!-- 法規項目 2 -->
                <TextView
                    android:id="@+id/regulation_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="第 2 條 - AED 定義"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:background="#3D5A73"
                    android:padding="15dp"
                    android:layout_marginBottom="10dp"
                    android:drawableEnd="@android:drawable/ic_menu_info_details"
                    android:drawablePadding="10dp"
                    android:clickable="true"
                    android:focusable="true"/>

                <!-- 法規項目 3 -->
                <TextView
                    android:id="@+id/regulation_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="第 3 條 - 設置場所規定"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:background="#3D5A73"
                    android:padding="15dp"
                    android:layout_marginBottom="10dp"
                    android:drawableEnd="@android:drawable/ic_menu_info_details"
                    android:drawablePadding="10dp"
                    android:clickable="true"
                    android:focusable="true"/>

                <!-- 法規項目 4 -->
                <TextView
                    android:id="@+id/regulation_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="第 4 條 - 使用資格"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:background="#3D5A73"
                    android:padding="15dp"
                    android:layout_marginBottom="10dp"
                    android:drawableEnd="@android:drawable/ic_menu_info_details"
                    android:drawablePadding="10dp"
                    android:clickable="true"
                    android:focusable="true"/>

                <!-- 法規項目 5 -->
                <TextView
                    android:id="@+id/regulation_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="第 5 條 - 管理維護責任"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:background="#3D5A73"
                    android:padding="15dp"
                    android:layout_marginBottom="10dp"
                    android:drawableEnd="@android:drawable/ic_menu_info_details"
                    android:drawablePadding="10dp"
                    android:clickable="true"
                    android:focusable="true"/>

                <!-- 法規項目 6 -->
                <TextView
                    android:id="@+id/regulation_6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="第 6 條 - 善意使用保護"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:background="#3D5A73"
                    android:padding="15dp"
                    android:layout_marginBottom="10dp"
                    android:drawableEnd="@android:drawable/ic_menu_info_details"
                    android:drawablePadding="10dp"
                    android:clickable="true"
                    android:focusable="true"/>

                <!-- 法規項目 7 -->
                <TextView
                    android:id="@+id/regulation_7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="第 7 條 - 教育訓練"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:background="#3D5A73"
                    android:padding="15dp"
                    android:layout_marginBottom="10dp"
                    android:drawableEnd="@android:drawable/ic_menu_info_details"
                    android:drawablePadding="10dp"
                    android:clickable="true"
                    android:focusable="true"/>

                <!-- 法規項目 8 -->
                <TextView
                    android:id="@+id/regulation_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="第 8 條 - 罰則規定"
                    android:textSize="18sp"
                    android:textColor="#FFFFFF"
                    android:background="#3D5A73"
                    android:padding="15dp"
                    android:layout_marginBottom="10dp"
                    android:drawableEnd="@android:drawable/ic_menu_info_details"
                    android:drawablePadding="10dp"
                    android:clickable="true"
                    android:focusable="true"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- 底部導航按鈕 -->
    <LinearLayout
        android:id="@+id/menu_container"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#1B3C53">

        <ImageView
            android:id="@+id/btn_location"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_location" />

        <ImageView
            android:id="@+id/btn_call"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/ic_phone" />

        <ImageView
            android:id="@+id/btn_law"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/ic_law" />

    </LinearLayout>

</FrameLayout>