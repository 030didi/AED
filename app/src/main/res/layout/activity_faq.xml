<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#234C6A">

    <!-- 返回按鈕 -->
    <Button
        android:id="@+id/btn_back_faq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回"
        android:backgroundTint="#E3E3E3"
        android:textColor="#000000"
        app:cornerRadius="20dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- 可滑動 Q&A 區 -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/btn_back_faq"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:dividerPadding="10dp">

            <!-- ========== Q1 ========== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="top">

                <TextView
                    app:cornerRadius="25dp"
                    android:text="Q1"
                    android:textColor="#FFFFFF"
                    android:background="#1B3C53"
                    android:gravity="center"
                    android:padding="12dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:textSize="18sp"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="#1B3C53"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="AED 放在胸口哪裡？貼錯會怎樣？"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="16sp"
                android:padding="10dp"
                android:text="照著貼片上的圖示貼就好：一片在右上胸、一片在左側腋下。"
                android:layout_marginBottom="20dp"/>

            <!-- ========== Q2 ========== -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="top">

                <TextView
                    android:text="Q2"
                    android:textColor="#FFFFFF"
                    android:background="#1B3C53"
                    android:gravity="center"
                    android:padding="12dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:textSize="18sp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:text="AED 電擊會讓患者「彈起來」嗎？"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="16sp"
                android:padding="10dp"
                android:text="不會。電擊強度不足以讓人跳起，只是讓心臟停止混亂電流，重新建立正常節律。"
                android:layout_marginBottom="20dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="top">

                <TextView
                    app:cornerRadius="25dp"
                    android:text="Q3"
                    android:textColor="#FFFFFF"
                    android:background="#1B3C53"
                    android:gravity="center"
                    android:padding="12dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:textSize="18sp"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="#1B3C53"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:text="使用 AED 會有法律責任嗎？"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="16sp"
                android:padding="10dp"
                android:text="通常不會。台灣有「善良撒瑪利亞人條款」，只要基於救人本意並依規範操作，不會因施救造成的副作用而承擔法律責任。"
                android:layout_marginBottom="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="top">

                <TextView
                    app:cornerRadius="25dp"
                    android:text="Q4"
                    android:textColor="#FFFFFF"
                    android:background="#1B3C53"
                    android:gravity="center"
                    android:padding="12dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:textSize="18sp"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="#1B3C53"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:text="孩子也可以用 AED 嗎？"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="16sp"
                android:padding="10dp"
                android:text="可以。兒童（1–8 歲）可以使用 AED，但 建議使用兒童電擊貼片；若沒有兒童貼片，也可用成人貼片。"
                android:layout_marginBottom="20dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="top">

                <TextView
                    app:cornerRadius="25dp"
                    android:text="Q5"
                    android:textColor="#FFFFFF"
                    android:background="#1B3C53"
                    android:gravity="center"
                    android:padding="12dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:textSize="18sp"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="#1B3C53"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:text="AED 使用時要先脫衣服嗎？"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="16sp"
                android:padding="10dp"
                android:text="是的。需要將患者胸口衣物移開，確保貼片能緊密貼合皮膚，避免影響導電。"
                android:layout_marginBottom="20dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="top">

                <TextView
                    app:cornerRadius="25dp"
                    android:text="Q6"
                    android:textColor="#FFFFFF"
                    android:background="#1B3C53"
                    android:gravity="center"
                    android:padding="12dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:textSize="18sp"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="#1B3C53"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:text="AED 使用時旁人需要避開嗎？"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="16sp"
                android:padding="10dp"
                android:text="需要。在 AED 電擊前，必須確保沒有人接觸患者，以免旁人受到電流影響。"
                android:layout_marginBottom="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="top">

                <TextView
                    app:cornerRadius="25dp"
                    android:text="Q7"
                    android:textColor="#FFFFFF"
                    android:background="#1B3C53"
                    android:gravity="center"
                    android:padding="12dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:textSize="18sp"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="#1B3C53"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:text=" AED 只能用一次嗎？"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="16sp"
                android:padding="10dp"
                android:text="不是。AED 可以多次分析心律並重複電擊，直到救護人員到場或患者恢復正常心律。"
                android:layout_marginBottom="50dp"/>



        </LinearLayout>

    </ScrollView>

    <include
        layout="@layout/bottom_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>